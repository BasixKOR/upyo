{
  "workspace": [
    "packages/*"
  ],
  "imports": {
    "tsdown": "npm:tsdown@^0.12.7"
  },
  "nodeModulesDir": "none",
  "exclude": [
    "**/dist",
    "**/node_modules",
    "node_modules"
  ],
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.yaml",
      "**/*.yaml",
      "*.yml",
      "**/*.yml"
    ]
  }
}
