{
  "workspace": [
    "packages/*"
  ],
  "imports": {
    "tsdown": "npm:tsdown@^0.12.7"
  },
  "nodeModulesDir": "none",
  "exclude": [
    "**/dist",
    "**/node_modules",
    "coverage",
    "junit.xml",
    "node_modules"
  ],
  "fmt": {
    "exclude": [
      "*.md",
      "**/*.md",
      "*.yaml",
      "**/*.yaml",
      "*.yml",
      "**/*.yml"
    ]
  },
  "tasks": {
    "check": "deno check && deno lint && deno fmt --check",
    "test": "deno test --allow-env --allow-net --env-file=.env.test",
    "hooks:install": "deno run --allow-read=deno.json,.git/hooks/ --allow-write=.git/hooks/ jsr:@hongminhee/deno-task-hooks",
    "hooks:pre-commit": {
      "dependencies": [
        "check"
      ]
    }
  }
}
